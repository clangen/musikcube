	  trunk/src/httpget.h, trunk/src/huffman.h, trunk/src/icy.c,
	  trunk/src/icy.h, trunk/src/id3.c, trunk/src/id3.h,
	  trunk/src/id3print.c, trunk/src/id3print.h,
